<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SpashScreenActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/splashicon"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mon projet TFC"
        android:textSize="22dp"
        android:layout_below="@+id/logo"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/descripText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Application mobile de formation professionelle lorem ipsum amet conseptetur sit ipsum lorem!"
        android:textSize="14dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:textStyle="italic"
        android:layout_below="@+id/welcomeText"
        android:textAlignment="center" />

    <ProgressBar
        android:id="@+id/MyProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_below="@+id/descripText"
        android:layout_marginEnd="120dp"
        android:layout_marginStart="120dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="By GloireMukoma!"
        android:textAlignment="center"
        android:layout_marginBottom="5dp"
        android:textStyle="italic"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>